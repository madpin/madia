{
    "version": "0.1.0",
    "configurations": [
        {
            "name": "Python: Module",
            "type": "python",
            "request": "launch",
            "module": "madia.cli",
            "justMyCode": false,
            "logToFile": true
        },
        {
            "name": "Python: CLI Command",
            "type": "python",
            "request": "launch",
            "module": "madia.cli",
            "args": [
                "path",
                "ai fib func python"
            ],
            "justMyCode": false,
            "logToFile": true
        },
        {
            "name": "Python: Debug Tests",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "purpose": [
                "debug-test"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTEST_ADDOPTS": "--no-cov -n0 --dist no"
            }
        }
    ]
}